[user]
	name = Pierrick Bouvier
    email = pierrick.bouvier@linaro.org
    #email = pierrick.bouvier@posteo.net
[sendemail]
    smtpserver = smtp.gmail.com
    smtpencryption = tls
    smtpserverport = 587
    smtpuser = pierrick.bouvier@linaro.org
    smtpBatchSize = 40
    smtpReloginDelay = 180
[color]
	diff = auto
	status = auto
	branch = auto
[core]
	pager = less -r
	preloadindex = true
[merge]
	conflictstyle = diff3
	ff = false
[push]
	default = simple
[merge "git-crypt"]
	name = A custom merge driver used to merge git-crypted files.
	driver = $HOME/.gitcryptmergetool.sh %O %A %B
	recursive = binary
[alias]
  sed = ! git grep -z --full-name -l '.' | xargs -0 sed -i -e
  su = submodule update --init
[pull]
	rebase = true
[diff]
	tool = vimdiff
	algorithm = patience
[credential "https://github.com"]
	helper = 
	helper = !/usr/bin/gh auth git-credential
[credential "https://gist.github.com"]
	helper = 
	helper = !/usr/bin/gh auth git-credential
[rebase]
	updateRefs = true
